    <body>
    	<div class="container">
      		<div class="form-signin">
      			<%= form_for :user, url: '/users' do |f| %>
      				<h2 class="form-signin-heading">Registration, Yay!</h2>
      				<%= text_field_tag :username, nil, options = {:placeholder => 'Username', :class => 'form-control'} %>
      				<%= text_field_tag :email, nil, options = {:placeholder => 'Email', :class => 'form-control'} %>
      				<%= f.password_field :password, options = {:placeholder => 'Password', :class => 'form-control'} %> 
      				<%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
    			   <% end %>
      		</div>
    	</div> <!-- /container -->
    	<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
